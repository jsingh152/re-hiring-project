#I can also create AWS Lambda Function. Create API Gateway and API resource. Deploy API and access the Web based visualization tool. 
exports.handler = async (event) => {
    const response = {
        statusCode: 200,
        body: JSON.stringify('Hello, World'),
    };
    return response;
};



#I can set up Dev and Prod Stage. Lamda variables and access the environment. This way.
exports.handler = async (event) => {
    const environment = process.env.ENVIRONMENT || 'dev';
    let greeting = 'Hello, World';

    if (environment === 'prod') {
        greeting = 'Production Hello, World';
    } else {
        greeting = 'Development Hello, World';
    }

    const response = {
        statusCode: 200,
        body: JSON.stringify(greeting),
    };
    return response;
};
